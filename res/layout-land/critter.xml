<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtCritterDie"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="@string/lblDie"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtCritterAttrib"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/lblAttrib"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtCritterDescr"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/lblDescr"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtCritterWeight"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/lblWeight"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtCritterArmour"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/lblArmour"
        android:textAppearance="?android:attr/textAppearanceSmall" />
 
    <TextView
        android:id="@+id/txtCritterWeapons"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/lblWeapons"
        android:textAppearance="?android:attr/textAppearanceSmall" />
  
    <TextView
        android:id="@+id/txtCritterWounds"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/lblWounds"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtCritterBehaviour"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/lblBehaviour"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtCritterFamily"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/lblFamily"
        android:textAppearance="?android:attr/textAppearanceSmall" />
                                            
</LinearLayout>